var Npc = function Npc(){
  this.name = "";
  this.pos_x = 0;
  this.pos_y = 0;
  this.width = 100;
  this.height = 150;
  this.sprite = rat_stand01;
}

var npcMake = function(name){
  var npc = new Npc;
  if (name === "trogdor"){
    npc.name = "trogdor"
    npc.pos_x = 3000;
    npc.pos_y = 2000;
    npc.sprite = trogdor_stand01;
  } else if (name === "kudler"){
    npc.name = "kudler"
    npc.pos_x = 450;
    npc.pos_y = 1729;
    npc.sprite = ben_stand01;
  } else if (name === "Marco"){
    npc.name = "Marco"
    npc.pos_x = 1700;
    npc.pos_y = 1890;
    npc.sprite = Marco_stand01;
  } else if (name === "Boss Triangle"){
    npc.name = "Boss Triangle"
    npc.pos_x = 3000;
    npc.pos_y = 300;
    npc.sprite = boss_triangle_rainbow; //TODO
  }
  return npc;
}

