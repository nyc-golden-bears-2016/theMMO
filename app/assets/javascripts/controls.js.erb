var processInputBuffer = function(){
  if(inBattle) { // Battle controls
    if((keys_pressed.indexOf(66) != -1) && (keys_pressed_checker.indexOf(66) === -1) ) {
      keys_pressed_checker.push(66);
      slashes.push(new Slash(your_char.enemyTarget));
