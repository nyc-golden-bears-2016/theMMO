<%= video_tag "landscape.webm", id:"video-background", autoplay: true, loop: true %>
 <h1>CREATE CHARACTER</h1>
<br>
<br>
<br>
<br>
<div class="col-md-4 col-md-offset-2">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
      <div id="the_slider">
<h1>Character name<%=@character.attack %></h2>
<p><%= @character.attack %></p>
<%= form_for @character do |create| %>
  <div class="charinput">
  <%= create.label :name %>
  <%= create.text_field :name %>
 </div>
  <h2>Character attributes</h2>
  <%= create.label :attack %>  <span id="range">0</span>
  <%= create.hidden_field :attack %>  
  <%= create.range_field :attack, :min=>0, :max=>100, :value=>0,  :class=>"slide", :id=>"slider1", :onchange=> "showValue(this.value)"%>
    <%= create.label :health %>  <span id="range1">0</span>
  <%= create.hidden_field :health %>
   <%= create.range_field :health, :min=>0, :max=>100, :value=>0, :class=>"slide", :id=>"slider1", :onchange=> "showValue1(this.value)"%>

    <%= create.label :defense %>  <span id="range2">0</span>
  <%= create.hidden_field :defense %>
   <%= create.range_field :defense, :min=>0, :max=>100, :value=>0, :class=>"slide", :id=>"slider1", :onchange=> "showValue2(this.value)"%>

    <%= create.label :max_health %>  <span id="range3">0</span>
  <%= create.hidden_field :max_health %>
   <%= create.range_field :max_health, :min=>0, :max=>100, :value=>0, :class=>"slide", :id=>"slider1", :onchange=> "showValue3(this.value)"%>
<%= create.submit %>
<% end %>

      </div>
    </div>
  </div>
</div>
</div>
<br>
<br>
<div class="text-center col-md-5 col-md-offset-4.4">
<%=image_tag("knight_south01.png", height: 400, width: 300)%>
<div class="col-md-5 ">
<div class="panel-heading">
<%@character1.each do |character|%>
  <h7><%=character.name%><h7>
  <%= form_for character, method: :patch do |f| %>
    <%= f.hidden_field :id, :value => character.id %>
    <%= f.submit "Select Character" %>
  <% end %>
<% end %>
</div>
</div>
</div>


