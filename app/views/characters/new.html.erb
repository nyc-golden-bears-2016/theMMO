
<div class="col-md-4 col-md-offset-4">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
      <div id="the_slider">
<h1>New Character<%=@character.attack %></h2>
<p><%= @character.attack %></p>
<%= form_for @character do |create| %>
  
  <%= create.label :name %>
  <%= create.text_field :name %>
  <%= create.label :location %>
  <%= create.text_field :location %>
  <%= create.hidden_field :attack %>
    <%= range_field_tag(:sliderRangeRails) %>

    <%= create.label :health %>
  <%= create.hidden_field :health %>
    <%= range_field_tag(:sliderRangeRails) %>

    <%= create.label :XP %>
  <%= create.hidden_field :XP %>
    <%= range_field_tag(:sliderRangeRails) %>

    <%= create.label :defense %>
  <%= create.hidden_field :defense %>
    <%= range_field_tag(:sliderRangeRails) %>

    <%= create.label :max_health %>
  <%= create.hidden_field :max_health %>
    <%= range_field_tag(:sliderRangeRails) %>
<%= create.submit %>
<% end %>
      </div>
    </div>
  </div>
</div>
</div>
