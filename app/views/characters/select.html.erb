 		<h1>SELECT CHARACTER</h1>
 		<div class=".container-fluid">
    <div class="col-xs-1">
    </div>

    <div class="col-xs-9">
      <div class="row">

		<%=image_tag "newwood.png", id: "wood", height: 450, width: 900 %>
		</div>
    </div>
        </div>
