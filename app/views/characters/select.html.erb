  <br>
<br>

	<%=image_tag("knight_south01.png", height: 350, width: 300)%>
		<div class="col-md-5 ">
			<% if @character1.exists? %>
			<div id="content">
    			<div id="left">
					<%@character1.each do |character|%>
  						<h10><%=character.name%></h10><br>
  						<%= form_for character, method: :PATCH, url: "/characters/update" do |f| %>
    					<%= f.hidden_field :id, :value => character.id %>
    					<%= f.submit "Select Character" %>
  							<% end %>
   						<% end %>
     			</div>
     		</div>
        <br>
         <br>
          <br>
  						<%else%>
  							<h1>HURRY UP AND MAKE A CHARACTER</h1>
  								<%= link_to('Create Character', new_character_path) %>
						<% end %>
	</div>
</div>